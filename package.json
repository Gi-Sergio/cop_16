{
  "name": "api_express_typescript_boilerplate",
  "version": "1.0.0",
  "description": "This is a boilerplate for an API with Express and Node.js",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npm run clean && npm run swagger && npm run tsc && npm run build:assets",
    "clean": "rmdir /s /q build && mkdir build",
    "swagger": "tsoa spec",
    "tsc": "tsc",
    "dev:swagger": "npm run swagger && npm run dev",
    "dev": "ts-node-dev --transpile-only --respawn src/index.ts",
    "build:assets": "mkdir build\\src\\assets && xcopy /E /I src\\assets build\\src\\assets && mkdir build\\src\\storage\\views\\templates && mkdir build\\src\\storage\\views\\pdf"
  },
  "keywords": [],
  "author": "c.wilcas@gmail.com",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "date-fns": "3.6.0",
    "dotenv": "16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "handlebars": "4.7.8",
    "handlebars-helpers": "0.10.0",
    "helmet": "7.1.0",
    "inversify": "6.0.2",
    "joi": "17.13.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "4.17.21",
    "morgan": "1.10.0",
    "mysql": "^2.18.1",
    "nestjs-paginate": "8.6.2",
    "pg": "8.11.5",
    "reflect-metadata": "0.2.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "tsoa": "6.2.1",
    "typeorm": "0.3.20",
    "typeorm-naming-strategies": "4.1.0",
    "winston": "3.13.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "1.7.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/file-saver": "^2.0.7",
    "@types/handlebars-helpers": "^0.5.6",
    "@types/helmet": "4.0.0",
    "@types/inversify": "2.0.33",
    "@types/joi": "17.2.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "4.17.4",
    "@types/morgan": "1.9.9",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@types/winston": "2.4.4",
    "copyfiles": "^2.4.1",
    "cpy-cli": "^5.0.0",
    "http-status-codes": "2.3.0",
    "mkdirp": "^3.0.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
